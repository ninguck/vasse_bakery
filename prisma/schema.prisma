generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Product {
  id                String     @id @default(uuid())
  title             String
  description       String
  mainImageUrl      String
  galleryImageUrls  String[]   @default([])
  badgeText         String?
  badgeColor        String?
  badgeIcon         String?
  category          Category?  @relation(fields: [categoryId], references: [id])
  categoryId        String?
  menuItems         MenuItem[]
  createdAt         DateTime   @default(now())
}

model MenuItem {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Float
  product     Product? @relation(fields: [productId], references: [id])
  productId   String?
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  String?
}

model Category {
  id        String      @id @default(uuid())
  name      String
  products  Product[]
  menuItems MenuItem[]
}

model FAQ {
  id        String   @id @default(uuid())
  question  String
  answer    String
  createdAt DateTime @default(now())
}

model AdminUser {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now())
}

model MiscContent {
  id         String   @id @default(uuid())
  section    String   // e.g. "hero", "about", "address", etc.
  imageUrl   String?  // Optional: for sections that need an image
  icon       String?  // Optional: for sections that need an icon
  largeText  String?  // Optional: e.g. hero card headline
  smallText  String?  // Optional: e.g. hero card subtext
  message    String?  // Optional: for generic text (address, etc.)
  createdAt  DateTime @default(now())
}